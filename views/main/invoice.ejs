<div class="container-fluid">
    <div style="margin-top:70px;"></div>
    <h3 class="text-center">Invoice</h3>
    <div class="client-body" id="clientBody">
        <form>
            <div class="row">
              <div class="col-md-4">
                  <div class="form-group">
                    <select class="form-control" id="clients_dropdown">
                        <option>Display data per client</option>
                        <% clientsData.forEach(function(clients){ %>
                           <option value="<%=clients._id%>"><%=clients.full_name%></option>
                        <% }) %>
                    </select>
                  </div>
              </div>
             
              <div class="col-md-8">
                  <div class="form-group" style="float:right;">
                    <button type="button" class="btn btn-warning newCargo" id="newCargo" onclick="location.reload()"><i class="fas fa-sync-alt"></i> Reload Page Data</button>
                  </div>
              </div>
            </div>
        </form>
             <table class="table table-striped table-dark">
                <thead style="background:#3F729B;">
                  <tr>
                    <th>Date Added</th>
                    <th>Clients Name</th>
                    <th style="background-color:#00897b  ;color:#fff;">Container Number</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody class="table_body">
                <% foundAllData.forEach(function(content){ %>
                  <tr id="rowID">
                    <td><%=(moment.parseZone(content.createdAt).format('l') === moment.parseZone(new Date()).format('l') ? 'Today': moment(content.createdAt).format("ll"))%></td>
                    <td><%=content.Client[0].full_name%></td>
                    <td><%=content.container_num%></td>
                    <td>
                      <% if( !content.invoice_exist ){ %>
                        <button class="btn btn-primary btn-sm new_invoiceBTN"  id="<%=content._id%>" data-target="#new_invoice" data-toggle="modal" ><i class="far fa-file"></i> New Invoice</button>
                      <% } %>
                       <% if( content.invoice_exist ){ %>
                            <a class="btn btn-warning btn-sm " href="/invoice/<%=content._id%>/email/<%=content.Client[0]._id%>/cargo/<%=content.Cargo%>/consignee/<%=content.Consignee%>/booking_c/<%=content.BookingConfirmation%>"><i class="fas fa-envelope-open"></i> Email Invoice</a>
                            <a class="btn btn-info btn-sm" href="/invoice/<%=content._id%>/editRoute"><i class="far fa-edit"></i> Edit</a>
                         <% } %>
                    </td>
                  </tr>
                 <% }) %>
                </tbody>
              </table>
    </div>
    <% if (pages && pages > 0) { %>
    <ul class="pagination justify-content-center">
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link" style="display:none;">First</a></li>
        <% } else { %>
        <li class="page-item" ><a href="/invoice" class="page-link" >First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link" style="display:none;">Previous</a></li>
        <% } else { %>
        <li class="page-item"><a href="/invoice?page=<%= Number(current) - 1 %>" class="page-link" >Previous</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="page-item active"><a class="page-link"><%= i %></a></li>
        <% } else { %>
        <li class="page-item"><a href="/invoice?page=<%= i %>" class="page-link"><%= i %></a></li>
        <% } %>
       
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link" style="display:none;">Next</a></li>
        <% } else { %>
        <li class="page-item"><a href="/invoice?page=<%= Number(current) + 1 %>" class="page-link">Next</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link" style="display:none;">Last</a></li>
        <% } else { %>
        <li class="page-item"><a href="/invoice?page=<%= pages %>" class="page-link">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</div>


